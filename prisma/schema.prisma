enum RegistrationStatus {
  PENDING
  APPROVED
  REJECTED
}

enum UserRole {
  ORGANIZER
  PARTICIPANT
  HIWI
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  passwordHash String
  role UserRole @default(PARTICIPANT)
  createdAt DateTime @default(now())
  registrationId Int?        @unique
  registration   Registration? @relation(fields: [registrationId], references: [id])
  hiwi HiWi?
}

model Registration {
  id           Int      @id @default(autoincrement())

  salutation   String   
  firstName    String   
  lastName     String   

  email        String 
  confirmEmail String  

  street       String   
  addressExtra String?  
  zipCode      String   
  city         String   

  school       String   
  grade        String   

  motivation   String?  
  comments     String?  

  createdAt    DateTime @default(now())
  status       RegistrationStatus @default(PENDING)

  user          User?
}

model Event {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  startDate   DateTime? 
  endDate     DateTime? 
  isActive    Boolean   @default(true)

  sessions    Session[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("events")
}

model Session {
  id          Int      @id @default(autoincrement())

  eventId     Int
  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  title       String
  description String?
  location    String?
  startsAt    DateTime
  endsAt      DateTime?

  // For later (Zoom/attendance)
  // zoomMeetingId String?
  // zoomReportUrl String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  hiwis HiWiSession[]

  @@index([eventId])
  @@index([startsAt])
  @@map("sessions")
}

model HiWi {
  id           Int    @id @default(autoincrement())
  userId       Int    @unique
  user         User   @relation(fields: [userId], references: [id])
  hiwiSessions HiWiSession[]
  clothingSize String?
}

model HiWiSession {
  id        Int      @id @default(autoincrement())

  hiwiId    Int
  hiwi      HiWi     @relation(fields: [hiwiId], references: [id], onDelete: Cascade)

  sessionId Int
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  // HiWi attendance for that session
  isPresent Boolean  @default(false)

  createdAt DateTime @default(now())

  @@unique([hiwiId, sessionId])
  @@index([sessionId])
  @@map("hiwi_sessions")
}